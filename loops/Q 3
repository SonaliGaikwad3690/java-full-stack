
public class Q3 {

	public static void main(String[] args) {
		int count=0;
		int sum = 0;
		System.out.println("Even numbers feom 0 to 20 are");
		
		for(int i=0;i<=20;i++) {
	
		   if(i%2==0) {
			  	System.out.println(i);	
				sum=sum+i;
				count++;
			} 
		}  System.out.println( "sum from 0 to 20 = " + sum);
		     System.out.println( "Count Of Number = " + count);
	}
}
