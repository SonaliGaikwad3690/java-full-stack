
public class N2 {

	public static void main(String[] args) {
		 int count=0;
		 int num=12345678;
		 int sum=0;
		 while(num>0) {
			 count++;
			 num=num/10;
			 sum=sum+count;
		 }System.out.println( "The Count Of Given Number = " + count);
		 System.out.println( "Sum of the Given Number = " + sum);
	}
}
