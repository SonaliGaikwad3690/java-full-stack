  //  print even numbers from 1 to 100 but stop when you get first odd number.
   public class EvenOdd {
	   public static void main(String[] args) {
		
		   for (int i = 1 ; i<=100; i++) {
			   if (i%2==0) {
				   break; //when Condition become true stop the loop
			   }
			   System.out.println(i);
		   }
	}

}
