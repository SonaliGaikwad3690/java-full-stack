package com.String;

public class PalindromeChar {

	public static void main(String[] args) {
		String str = "mam";
		String rev = "";
		for(int i = str.length()-1; i>= 0;i--) {
			rev = rev + str.charAt(i);
		}
		if(str.equals(rev)) {
			System.out.println(str + " is a Palindrome...!");
		}else {
			System.out.println(str + " Not a Palindrome...!");
		}
	}
}
