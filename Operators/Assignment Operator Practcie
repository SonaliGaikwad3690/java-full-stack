
public class AssighnmentOperatorTask {

	public static void main(String[] args) {
		
//		 Assignment Operator(Binary) are used to to assign values to variable 
//		        Add & assign +=
//				Sub & Assign -=
//				Mul & Assign *=
//				Div & Assign /=
//				Mod & Assign %=
		
		int a = 4 ;
		a += 4;
		System.out.println(a);
		a -=2;
		a *=3;
	    System.out.println(a);
	    a /=2;
	    System.out.println(a);
	    a %=3;
	    System.out.println(a);
	}
}
